# Flickd Fashion Analysis Pipeline Configuration
# Copy this file to .env and modify as needed

# Processing settings
FRAME_EXTRACTION_INTERVAL=0.5
MAX_FRAMES_PER_VIDEO=20
BATCH_SIZE=32

# Model settings
YOLO_MODEL=yolov8n.pt
CLIP_MODEL=openai/clip-vit-base-patch32
NLP_MODEL=distilbert-base-uncased

# Similarity thresholds
SIMILARITY_EXACT=0.9
SIMILARITY_SIMILAR=0.75
SIMILARITY_MINIMUM=0.75

# Performance settings
IMAGE_CACHE_LIMIT=1000
USE_GPU=true
VERBOSE_LOGGING=false

# Output settings
SAVE_INDIVIDUAL_RESULTS=true
SAVE_COMBINED_RESULTS=true
OUTPUT_FORMAT=json
